<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0057AD"
    app:layout_collapseMode="none"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logo_senai"
        android:layout_width="310dp"
        android:layout_height="93dp"
        android:layout_marginTop="144dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logosenaii" />

    <View
        android:id="@+id/modal"
        android:layout_width="314dp"
        android:layout_height="288dp"
        android:layout_marginStart="66dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="66dp"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bem_vindo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Bem-vindo ao"
        android:textColor="#4B4B4B"
        app:layout_constraintEnd_toEndOf="@+id/modal"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/modal"
        app:layout_constraintTop_toTopOf="@+id/modal" />

    <TextView
        android:id="@+id/almoxarifado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Almoxarifado"
        android:textColor="#0047B5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/modal"
        app:layout_constraintStart_toStartOf="@+id/modal"
        app:layout_constraintTop_toTopOf="@+id/modal" />

    <EditText
        android:id="@+id/input_email"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/modal"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="@+id/modal"
        app:layout_constraintTop_toBottomOf="@+id/almoxarifado" />

    <EditText
        android:id="@+id/input_senha"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/modal"
        app:layout_constraintStart_toStartOf="@+id/modal"
        app:layout_constraintTop_toBottomOf="@+id/input_email" />

    <TextView
        android:id="@+id/esqueceu_a_senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Esqueceu a senha?"
        android:textColor="#0047B5"
        app:layout_constraintStart_toStartOf="@+id/modal"
        app:layout_constraintTop_toBottomOf="@+id/input_senha" />

    <TextView
        android:id="@+id/cadastre_se"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="32dp"
        android:text="Cadastre-se"
        android:textColor="#0047B5"
        app:layout_constraintBottom_toBottomOf="@+id/modal"
        app:layout_constraintStart_toStartOf="@+id/modal" />

    <Button
        android:id="@+id/entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="20dp"
        android:radius="120px"
        android:text="Entrar"
        android:textColor="#FFFFFF"
        app:backgroundTint="#0047B5"
        app:layout_constraintBottom_toBottomOf="@+id/modal"
        app:layout_constraintEnd_toEndOf="@+id/modal" />

</androidx.constraintlayout.widget.ConstraintLayout>